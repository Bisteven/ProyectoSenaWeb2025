@model List<ProyectoSena2025.Models.Matricula>

@{
    ViewData["Title"] = "Lista de Matrículas";
}

<div class="row fade-in">
    <div class="col-12">
        <h2 class="mb-4"><i class="bi bi-list-check me-2"></i>Lista de Matrículas</h2>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="stats-card">
                <h5 class="mb-0 text-muted">Total de Matrículas</h5>
                <h2 class="mb-0 text-primary">@Model.Count</h2>
            </div>
            <a asp-action="Crear" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Nueva Matrícula
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Número Documento</th>
                            <th>Nombre Completo</th>
                            <th>Programa</th>
                            <th>Ficha</th>
                            <th>Fecha Matrícula</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var matricula in Model)
                        {
                            <tr>
                                <td>@matricula.Id</td>
                                <td>@matricula.NumeroDocumento</td>
                                <td>@matricula.NombreCompleto</td>
                                <td>@matricula.Programa</td>
                                <td>@matricula.Ficha</td>
                                <td>@matricula.FechaMatricula.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-@(matricula.Estado == "Activa" ? "success" : "secondary")">
                                        @matricula.Estado
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <a asp-action="Editar" asp-route-id="@matricula.Id" class="btn btn-sm btn-warning" title="Editar matrícula">
                                            <i class="bi bi-pencil-square me-1"></i>Editar
                                        </a>
                                        <a asp-action="DescargarJson" asp-route-id="@matricula.Id" class="btn btn-sm btn-info text-white" title="Descargar archivo JSON">
                                            <i class="bi bi-filetype-json me-1"></i>JSON
                                        </a>
                                        <a asp-action="DescargarPdf" asp-route-id="@matricula.Id" class="btn btn-sm btn-success" title="Descargar archivo PDF">
                                            <i class="bi bi-filetype-pdf me-1"></i>PDF
                                        </a>
                                        <form asp-action="Eliminar" method="post" class="d-inline" onsubmit="return confirm('¿Está seguro de eliminar esta matrícula?');">
                                            <input type="hidden" name="id" value="@matricula.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Eliminar matrícula">
                                                <i class="bi bi-trash me-1"></i>Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info fade-in" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-info-circle me-2"></i>No hay matrículas registradas
                </h4>
                <p class="mb-0">No se han encontrado matrículas en el sistema. Haga clic en el botón "Nueva Matrícula" para comenzar.</p>
            </div>
        }
    </div>
</div>

